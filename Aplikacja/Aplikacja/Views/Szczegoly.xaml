<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacja.Views.Szczegoly">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Lista" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="20">
                                <StackLayout Padding="10">
                                    <Label Text="Data :" FontAttributes="Bold"/>
                                    <Label Text="{Binding Data}"/>
                                    <Label Text="Kwota :" FontAttributes="Bold"/>
                                    <Label Text="{Binding Kwota}"/>
                                    <Label Text="Nazwa :" FontAttributes="Bold"/>
                                    <Label Text="{Binding Nazwa}"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>